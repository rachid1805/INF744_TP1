<?xml version="1.0" encoding="utf-8"?>
<Document Title="Fichier de commandes pour l'application" Version="1.0">
  <DataLinkCommands>
    <!--Nom du fichier d'entrée avec le path complet-->
    <InFile>InputFileTest.bin</InFile>
    <!--Nom du fichier de sortie avec le path complet-->
    <OutFile>OutputFileTest.bin</OutFile>
    <!--La taille du tampon de transmission (Max 256 bytes)-->
    <WindowSize>8</WindowSize>
    <!--Global/Selective Reject (Rejet Global ou Selectif)-->
    <RejectType>Global</RejectType>
    <!--Le timeout de la station de transmission en ms-->
    <Timeout>1000</Timeout>
    <!--La latence de transmission en ms entre la station émettrice et la station réceptrice-->
    <Latency>10</Latency>
    <!--La probabilité des erreurs à introduire dans les trames en % (10% => 1 trame sur 10 est en erreur)-->
    <ProbabilityError>20</ProbabilityError>
    <!--Le nombre de bits erronés dans la trame-->
    <NumberOfBitErrors>1</NumberOfBitErrors>
  </DataLinkCommands>
</Document>